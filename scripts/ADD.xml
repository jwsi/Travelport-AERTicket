<ButtonConf ButtonName="ADD" Description="Add a passenger to a PNR" QuickCommand="ADD">
  <QuestionsBlock WindowFormTitle="Choose the passenger's company" SubmitButtonName="SUBMIT" HideSubmitButton="true" WindowId="fare_type_window" Designer="True">
    <Button Width="200" Content="RISC Capital Services" OnClickAction="Execute Action" PostClickAction="Close Window" VarName="SBAuto_Button_16eb806c-5ce5-415f-b80f-8c7f71d7b8b6" ValidateControls="False" TabIndex="1" X="10" Y="10">
      <Action>
        <Variable VarName="company">RCS</Variable>
      </Action>
    </Button>
    <Button Width="200" Content="Ultra Horizon" OnClickAction="Execute Action" PostClickAction="Close Window" VarName="SBAuto_Button_644bbae9-0616-41a9-b444-35a28213763b" ValidateControls="False" TabIndex="2" X="10" Y="50">
      <Action>
        <Variable VarName="company">UH</Variable>
      </Action>
    </Button>
    <Button Width="200" Content="Elliptic Systems" OnClickAction="Execute Action" PostClickAction="Close Window" VarName="SBAuto_Button_2d0bc6ed-b8e1-4fd9-ae12-f086f1b5c047" ValidateControls="False" TabIndex="2" X="10" Y="90">
      <Action>
        <Variable VarName="company">ES</Variable>
      </Action>
    </Button>
    <Button Width="200" Content="OPSEC" OnClickAction="Execute Action" PostClickAction="Close Window" VarName="SBAuto_Button_876b5ef5-2a1b-4053-9e1a-c86899c2f9f8" ValidateControls="False" TabIndex="2" X="10" Y="130">
      <Action>
        <Variable VarName="company">OPSEC</Variable>
      </Action>
    </Button>
    <Button Width="200" Content="Tinkerstruct" OnClickAction="Execute Action" PostClickAction="Close Window" VarName="SBAuto_Button_ae2e4cdf-3d91-4f20-b35c-b38e5f811d19" ValidateControls="False" TabIndex="2" X="10" Y="170">
      <Action>
        <Variable VarName="company">TS</Variable>
      </Action>
    </Button>
    <Button Width="200" Content="SRS" OnClickAction="Execute Action" PostClickAction="Close Window" VarName="SBAuto_Button_ae2e4cdf-3d91-4f20-b35c-b38e5f811d19" ValidateControls="False" TabIndex="2" X="10" Y="210">
      <Action>
        <Variable VarName="company">SRS</Variable>
      </Action>
    </Button>
  </QuestionsBlock>
  <TextBox VarName="name" Question="Enter the passenger's name" Width="200" ToolTip="For help, execute LIST to see personnel">
    <ValidationRules>
      <RegEx ErrorMessage="INVALID NAME"><![CDATA[(^[A-Z]+ [A-Z]+$)]]></RegEx>
    </ValidationRules>
    <DefaultValue>FIRST LAST</DefaultValue>
  </TextBox>
  <RunCommand StandardCommand="True">C*[company]-[name]</RunCommand>
  <BookingFileBrowser VarName="passenger_count" RefreshBookingFile="False" LoadFiledFaresDetails="False">Passengers.Count</BookingFileBrowser>
  <ConditionalAction Condition="[passenger_count]&gt;=1">
    <True>
      <ArithmeticalOperation VarName="number">[passenger_count]+1</ArithmeticalOperation>
      <RunCommand StandardCommand="True">CMP/P-[number]/+1[number]</RunCommand>
    </True>
    <False>
      <RunCommand StandardCommand="True">CMP/P-1/+11</RunCommand>
    </False>
  </ConditionalAction>
  <ShowMessage ShowInTerminal="True" ClearScreen="True">COMPLETE</ShowMessage>
</ButtonConf>